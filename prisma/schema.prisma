// Prisma Schema
// This is your Prisma schema file for the Branch Dashboard backend

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/dashboard.db"
}

model Branch {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  // Relations
  agents Agent[]
  leads  Lead[]

  @@map("branches")
}

model Agent {
  id        Int      @id @default(autoincrement())
  name      String
  branchId  Int      @map("branch_id")
  email     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  // Relations
  branch Branch @relation(fields: [branchId], references: [id])
  leads  Lead[]

  @@index([branchId], map: "idx_agents_branch_id")
  @@map("agents")
}

model Lead {
  id          Int       @id @default(autoincrement())
  branchId    Int       @map("branch_id")
  agentId     Int       @map("agent_id")
  status      String    @default("Open")
  product     String?
  segment     String?
  campaign    String?
  revenue     Float     @default(0)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @default(now()) @updatedAt @map("updated_at")
  contactedAt DateTime? @map("contacted_at")
  convertedAt DateTime? @map("converted_at")

  // Relations
  branch Branch @relation(fields: [branchId], references: [id])
  agent  Agent  @relation(fields: [agentId], references: [id])

  @@index([branchId], map: "idx_leads_branch_id")
  @@index([agentId], map: "idx_leads_agent_id")
  @@index([status], map: "idx_leads_status")
  @@index([createdAt], map: "idx_leads_created_at")
  @@map("leads")
}

model Metric {
  id         Int      @id @default(autoincrement())
  metricType String   @map("metric_type")
  metricKey  String   @map("metric_key")
  value      String
  createdAt  DateTime @default(now()) @map("created_at")

  @@unique([metricType, metricKey])
  @@map("metrics")
}
